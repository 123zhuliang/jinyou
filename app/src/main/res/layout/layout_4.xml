<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_top"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
    </ListView>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/list_top">

    </ListView>
    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/dneglu"
        android:text="登录"
        android:textSize="25sp"
        android:textColor="#F3219F"
        android:background="#9CCDF5"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/list_bottom"
        android:onClick="denglu"/>


</RelativeLayout>
